@using _1_BaseDTOs.Product

<EditForm Model="newProduct" OnValidSubmit="HandleValidSubmit">
    <MudDialog>
        <DialogContent>
            <DataAnnotationsValidator />
            <MudTextField Label="Nome" @bind-Value="newProduct.Titulo" For="@(() => newProduct.Titulo)" />
            <MudTextField Label="Descrição" @bind-Value="newProduct.Descricao" For="@(() => newProduct.Descricao)" />
            <MudTextField Label="Preço" @bind-Value="newProduct.Preco" For="@(() => newProduct.Preco)" />
            <MudAutocomplete 
                @bind-Value="_category"
                SearchFunc="Search"
                Variant="Variant.Text"
                Label="@_comboBoxLabel"
                Margin="_margin"
                Dense="_dense"
                Disabled="_disabled"
                ReadOnly="_readonly"
                Placeholder="@(_placeholder ? "Placeholder" : null)"
                Clearable="_clearable"
                Required="true">
            </MudAutocomplete>

        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit">@buttonText</MudButton>
            <MudButton Color="Color.Secondary" OnClick="Cancel">Cancelar</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

<style>
    .mud-dialog {
        min-width: 450px;
        border-radius: 10px;
    }

    .mud-dialog .mud-dialog-content {
        overflow: hidden !important;
    }

    .mud-card-actions {
        justify-content: space-between;
    }

    .mud-dialog .mud-dialog-actions {
        padding-right: 1em;
    }

    .mud-card-content {
        padding: 25px !important;
    }

    .mud-dialog-title {
        padding-bottom: 0px !important;
    }

</style>
